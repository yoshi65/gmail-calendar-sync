# Debug environment configuration for Gmail Calendar Sync
# Copy this to .env.debug for VSCode debug configurations

# =============================================================================
# Gmail API Settings (same as production)
# =============================================================================
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# =============================================================================
# Google Calendar API Settings (same as production)
# =============================================================================
CALENDAR_CLIENT_ID=your_calendar_client_id
CALENDAR_CLIENT_SECRET=your_calendar_client_secret
CALENDAR_REFRESH_TOKEN=your_calendar_refresh_token

# =============================================================================
# OpenAI API Settings (same as production)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# Debug-specific settings
# =============================================================================

# Debug logging
LOG_LEVEL=DEBUG

# Sync settings for debugging (recent emails only)
SYNC_PERIOD_HOURS=1

# Use debug-specific Gmail label
GMAIL_LABEL=DEBUG_PROCESSED_BY_GMAIL_SYNC

# Disable Slack notifications for debugging
# SLACK_WEBHOOK_URL=

# =============================================================================
# Performance monitoring settings
# =============================================================================

# Enable memory profiling (requires memory_profiler)
# MEMORY_PROFILING=true

# Enable performance timing
# PERFORMANCE_MONITORING=true
