# Google APIs OAuth2 Configuration (shared for Gmail and Calendar)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# Optional Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url
SYNC_PERIOD_HOURS=3    # Default: 3 hours (recommended for 1-hour cron interval)
SYNC_PERIOD_DAYS=30    # Fallback for backward compatibility
LOG_LEVEL=INFO

# Date Range Configuration (optional, highest priority)
# Format: YYYY-MM-DD
# SYNC_START_DATE=2024-01-01
# SYNC_END_DATE=2024-01-31
